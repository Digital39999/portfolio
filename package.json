		"postcss": "8.4.49",
		"tailwindcss": "3.4.17",
		"typescript": "5.6.2",
		"typescript-eslint": "8.5.0",
		"vite": "5.4.3",
		"vite-plugin-chunk-split": "0.5.0",
		"vite-tsconfig-paths": "5.0.1"
	},
	"engines": {
		"node": ">=20.2.0"
	}
